# Azure Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# Azure Credentials
AZURE_SUBSCRIPTION_ID=your-subscription-id-here
AZURE_RESOURCE_GROUP=your-resource-group-name
AZURE_WORKSPACE_NAME=your-workspace-name
AZURE_LOCATION=germanywestcentral

# Compute Configuration
COMPUTE_NAME=your-compute-name
COMPUTE_SIZE=STANDARD_NC6

# Model Configuration (optional - has defaults)
MODEL_NAME=plant-disease-classifier
MODEL_VERSION=1

# Training Configuration (optional - has defaults)
BATCH_SIZE=32
EPOCHS=50
LEARNING_RATE=0.001
IMAGE_SIZE=224

# API Configuration (optional - has defaults)
API_NAME=plant-disease-api
API_PORT=8000
